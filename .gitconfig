[init]
	defaultBranch = main
[user]
	email = a.hr.nikolov@gmail.com
	name = Atanas Nikolov
	name = a-hr-nikolov
[pull]
	rebase = true
[core]
	pager = less -FXRS
	editor = code --wait
[color]
	ui = true
[merge]
	tool = code --wait
[rebase]
	autoStash = true
	autosquash = false
[alias]
	logline = log --oneline --abbrev-commit --all --decorate --graph
	pl = log --pretty='%C(red)%h%Creset%C(yellow)%d%Creset %s %C(cyan)(%ad || %ar)%Creset' --date=format:'%Y-%m-%d %H:%M'
	new = prettylog main..HEAD
	missing = prettylog HEAD..main
[rerere]
	enabled = true
